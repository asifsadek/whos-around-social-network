<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body class="container">
		<header>
			<nav class="navbar navbar-default" role="navigation">
				<div class="container-fluid">
					<% include ../partials/headerNavBase %>
					<ul class="nav navbar-nav">
						<li><a href="/user">Profile</a></li>
						<li><a href="/logout">Log Out</a></li>
					</ul>
				</div>
			</nav>
		</header>

		<main>
			<div class="text-center row">
				<div class="col-md-12">
					<h2>
						Welcome to <%= title %>, <%= username %>
					</h2>
				</div>
			</div><br/>
			<div class="row">
				<div class="col-md-12">
					<form  action="/user/postUpdate" method="post">
						<div class="form-group">
							<label for="status">Create a Post</label>
							<input type="text" class="form-control" name="status" placeholder="What's on your mind?" required>
						</div>
						<button type="submit" class="btn btn-primary">Post</button>
					</form>
				</div>
			</div><br/>
			<div>
				<% statusList.forEach( function(status) { %>
				<div class="status-updates-outer row">
					<div class="col-md-12 status-updates-inner">
						<h4><b><a href="/user/<%= status.username %>"> <%= status.username %> </a></b></h4>
						<h5> <%= status.date %> </h5>
						<h3> <%= status.status %> </h3><br/>
					</div>
				</div>
				<% }); %>
			</div>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>
