<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body class="container">
		<header>
			<nav class="navbar navbar-default" role="navigation">
				<div class="container-fluid">
					<% include ../partials/headerNavBase %>
					<ul class="nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li><a href="/user">Profile</a></li>
						<li><a href="/logout">Log Out</a></li>
					</ul>
				</div>
			</nav>
		</header>

		<main>
			<div class="row text-center" style="padding-bottom:5%">
				<div class="col-md-12">
					<div>
						<h1>
							Your Friends
						</h1>
					</div>
				</div>
			</div>
			<% friendList.forEach( function(friend) { %>
				<div class="row" style="padding-bottom:0.5%">
					<div class="col-md-offset-1 col-md-6 text-center">
						<div>
							<strong>
								<%= friend.username %>
							</strong>
						</div>
					</div>
					<div class="col-md-1">
						<a href= "<%= friend.url %>" class="btn btn-primary">Profile</a>
					</div>
					<div class="col-md-1">
						<a href="/friends/remove/<%= friend.username %>" class="btn btn-danger">Unfriend</a>
					</div>
				</div>
			<% }); %>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>
