<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body class="container">
		<header>
			<nav class="navbar navbar-default" role="navigation">
				<div class="container-fluid">
					<% include ../partials/headerNavBase %>
					<ul class="nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li><a href="/user">Profile</a></li>
						<li><a href="/logout">Log Out</a></li>
					</ul>
				</div>
			</nav>
		</header>

		<main>
			<div>
				<h1>
					<%= username %>
				</h1>
			<div><br/>
			<div>
				<a href="/friends/remove/<%= username %>" class="btn btn-danger">Unfriend</a>
			</div><br/><br/>
			<div>
				<% statusList.forEach( function(status) { %>
					<div class="status-updates-outer">
						<h5> <%= status.date %> </h5>
						<h3> <%= status.status %> </h3><br/>
					</div>
				<% }); %>
			</div><br/>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>
