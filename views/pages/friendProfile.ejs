<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body class="container">
		<header>
			<nav class="navbar navbar-default" role="navigation">
				<div class="container-fluid">
					<% include ../partials/headerNavBase %>
					<ul class="nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li><a href="/user">Profile</a></li>
						<li><a href="/logout">Log Out</a></li>
					</ul>
				</div>
			</nav>
		</header>

		<main>
			<div class="row">
				<div class="col-md-6 text-center">
					<div>
						<img src="<%= profilePictureURL %>" alt="Gravatar"
							class="img-responsive img-circle center-block">
					</div>
				</div>
				<div class="col-md-6">
					<div>
						<h1>
							<%= username %>
						</h1>
					</div>
					<div>
						<h3>
							bio goes here
						</h3>
					</div>
				</div>
			</div><br/>
			<div class="row">
				<div class="col-md-6">
					<div class="text-center">
						<h3>
							stats go here
						</h3>
						<h3>
							links go here
						</h3>
					</div>
				</div>
				<div class="col-md-6">
					<div style="padding-top:3%">
						<a href="/friends/remove/<%= username %>" class="btn btn-danger">Unfriend</a>
					</div>
				</div>
			</div>
			<% if (statusList.length != 0) { %>
				<div>
					<% statusList.forEach( function(status) { %>
						<div class="row">
							<div class="col-md-12">
								<div class="panel panel-default">
									<div class="panel-heading">
										<b><a href="/user/<%= username %>"> <%= username %> </a></b>
									</div>
									<div class="panel-body">
										<div class="row">
											<div class="col-md-1">
												<img src="<%= profilePictureURLsmall %>" alt="Profile Picture" class="img-responsive img-rounded" />
											</div>
											<div class="col-md-8">
												<p class="lead">
													<b><%= status.status %></b>
												</p>
												<small class="text-muted"><%= status.date %></small>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					<% }); %>
				</div>
			<% }; %>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>
