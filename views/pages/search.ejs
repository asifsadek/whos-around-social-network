<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
		<script src="/js/updateLocation.js"></script>
	</head>
	<body class="container">
		<header>
			<nav class="navbar navbar-default" role="navigation">
				<div class="container-fluid">
					<% include ../partials/headerNavBase %>
					<ul class="nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li><a href="/user"><%= username %></a></li>
						<li><a href="/logout">Log Out</a></li>
					</ul>
				</div>
			</nav>
		</header>

		<main>
			<div class="row text-center" style="padding-bottom:5%">
				<div class="col-md-12">
					<div>
						<h1>
							Search Results
						</h1>
					</div>
					<div>
						<form action="/search" class="form-inline">
							<div class="form-group">
								<input class="form-control" type="text" name="data" value=<%= searched %> required>
							</div>
							<button type="submit" class="btn btn-primary">Search</button>
						</form>
					</div>
				</div>
			</div>
			<% resultList.forEach( function(result) { %>
				<div class="row well" style="padding-bottom:0.5%">
					<div class="col-md-offset-3 col-md-3 text-center">
						<div>
							<img src="<%= result.profilePictureURL %>" alt="Profile Picture"
										class="img-responsive img-rounded center-block">
						</div>
					</div>
					<div class="col-md-3">
						<div>
							<a href="/user/<%= result.username %>">
								<h3>
									<%= result.username %>
								</h3>
							</a>
						</div>
					</div>
				</div>
			<% }); %>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>
