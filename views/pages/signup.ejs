<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body class="container">
		<header>
			<nav class="navbar navbar-default" role="navigation">
				<div class="container-fluid">
					<% include ../partials/headerNavBase %>
					<ul class="nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li><a href="/login">Log In</a></li>
					</ul>
				</div>
			</nav>
		</header>

		<main>
			<div class="container">
				<div class="row">
					<div class="col-md-8 col-md-offset-2">
						<div class="panel panel-default">
							<div class="panel-heading">Sign up</div>
							<div class="panel-body">
								<form class="form-horizontal" role="form" method="POST" action="/signup">
									<div class="form-group <%- duplicateUser == true ? 'has-error' : '' %>">
										<label for="username" class="col-md-4 control-label">Username</label>

										<div class="col-md-6">
											<input id="username" type="text" class="form-control" name="username" required autofocus>

											<% if (duplicateUser == true) { %>
												<span class="help-block">
													<strong>Username already in use!</strong>
												</span>
											<% } %>
										</div>
									</div>

									<div class="form-group <%- duplicateEmail == true ? 'has-error' : '' %>">
										<label for="email" class="col-md-4 control-label">E-Mail Address</label>

										<div class="col-md-6">
											<input id="email" type="email" class="form-control" name="email" required>

											<% if (duplicateEmail == true) { %>
												<span class="help-block">
													<strong>Email already in use!</strong>
												</span>
											<% } %>
										</div>
									</div>

									<div class="form-group">
										<label for="password" class="col-md-4 control-label">Password</label>

										<div class="col-md-6">
											<input id="password" type="password" class="form-control" name="password" required>
										</div>
									</div>

									<div class="form-group">
										<div class="col-md-6 col-md-offset-4">
											<button type="submit" class="btn btn-primary">
												Sign up
											</button>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>
	</body>
</html>
